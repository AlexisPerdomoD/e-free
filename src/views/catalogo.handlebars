<section class="section">
    <div class=" catalogo__container">
        <div class="hero ">
            <h2 class="hero__lead">{{usser}}, Wellcome to our list of products üçî </h2>
            <p class="">this is the list of products comming throught regular CRUD HTTP requests</p>
        </div>
        <div class="catalogo container">
            <div class="hero__content">
                <p class="hero__lead">this is our complete catalogo</p>
            </div>
            <ul class="catalogo__list">
            {{#each products}}
                <li>
                    <div class="card">
                        <img src={{this.thumbnail}} alt="image reference for {{this.title}}" height="200" >
                        <h4>{{this.title}}</h4>
                        <p class="description">{{this.description}}</p>
                        <p class="price">Price: ${{this.price}}</p>
                        <div class="card__button">
                            <button class="button button--sm button--secondary">something else</button>
                            <button class="add-card button--sm button">add to card</button>
                        </div>
                    </div>
                </li>
            {{/each}}
            </ul>

        </div>
    </div>
</section>